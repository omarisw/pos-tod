<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_view_order_line_rules" model="ir.ui.view">
        <field name="name">sale.order.line.form.rules_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
    <!-- Finaliza Ventas -->
    <record id="purchase_order_form_inherit_view_rules" model="ir.ui.view">
        <field name="name">purchase.order.form.rules</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True, 'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
    <!-- Finaliza Compras -->
    <record id="account_,pve_form_view_rules" model="ir.ui.view">
        <field name="name">account.move.form.view.rules</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
            </xpath>
        </field>
    </record>
    <!-- Finaliza Contabilidad -->
            <record id="stock_picking_form_view_inherit_no_create_edit" model="ir.ui.view">
            <field name="name">stock.picking.form.view.inherit.no_create_edit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_quick_create':True,'no_create_edit':True}</attribute>
                </xpath>
            </field>
        </record>

</odoo>
